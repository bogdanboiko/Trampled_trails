<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <EditText
        android:id="@+id/addTagEditText"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:hint="set tag name"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addTagButton"
        app:layout_constraintBottom_toTopOf="@+id/tagRecycler"/>
    <ImageButton
        app:layout_constraintStart_toEndOf="@+id/addTagEditText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tagRecycler"
        app:layout_constraintEnd_toStartOf="@id/cancelTagAddingButton"
        android:id="@+id/addTagButton"
        android:layout_width="50dp"
        android:background="@color/white"
        android:layout_height="0dp"
        android:padding="10dp"
        android:src="@drawable/ic_confirm"
        />
    <ImageButton
        app:layout_constraintStart_toEndOf="@+id/addTagButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tagRecycler"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cancelTagAddingButton"
        android:layout_width="50dp"
        android:background="@color/white"
        android:layout_height="0dp"
        android:visibility="gone"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@id/addTagEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/submitTagsButton"/>
    <Button
        android:id="@+id/submitTagsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@+id/tagRecycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/cancelTagsDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@+id/tagRecycler"
        app:layout_constraintEnd_toStartOf="@id/submitTagsButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>