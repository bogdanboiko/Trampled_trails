<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="49.4421"
        mapbox:mapbox_cameraTargetLng="32.06"
        mapbox:mapbox_cameraZoom="11.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                mapbox:layout_constraintEnd_toEndOf="parent"
                android:visibility="invisible"
                mapbox:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/centerGuideline"
                mapbox:srcCompat="@drawable/ic_def_point" />

            <Button
                android:id="@+id/addPointButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/setPointButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cancelPointButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:visibility="invisible"
                mapbox:layout_constraintEnd_toStartOf="@id/addPointButton"
                mapbox:layout_constraintTop_toTopOf="@id/addPointButton" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/centerGuideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.mapbox.maps.MapView>
</androidx.constraintlayout.widget.ConstraintLayout>